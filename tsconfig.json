{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "/*": ["./*"]
    }
  },
  "exclude": [".history", ".vite", "assets", "dist", "node_modules", "out"],
  // Include JS files so they are covered by projectService (ESLint)
  "include": ["src/**/*", "forge.env.d.ts", "global.d.ts", "*.js", "scripts/**/*"]
}
